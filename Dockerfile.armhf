FROM golang:1.10.4 as builder
RUN mkdir -p /go/src/github.com/zeerorg/cron-connector
WORKDIR /go/src/github.com/zeerorg/cron-connector

COPY vendor       vendor
COPY types        types
COPY main_test.go .
COPY main.go      .

# Run a gofmt and exclude all vendored code.
RUN test -z "$(gofmt -l $(find . -type f -name '*.go' -not -path "./vendor/*"))"

RUN go test -v ./...

# Stripping via -ldflags "-s -w" 
RUN CGO_ENABLED=0 GOOS=linux GOARCH=arm go build -a -ldflags "-s -w" -installsuffix cgo -o ./connector

FROM arm32v7/debian:9.6-slim

COPY --from=builder /go/src/github.com/zeerorg/cron-connector/    .

CMD ["./connector"]